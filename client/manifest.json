{
  "manifest_version": 3,
  "name": "Ad Scanner",
  "version": "1.0",
  "description": "Scans pages for ads using EasyList, captures screenshots, and queries Prebid.js metadata.",
  "permissions": ["scripting", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["<all_urls>"]
    }
  ]
}
